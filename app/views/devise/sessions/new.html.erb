<div class="container mt-5 pt-5 pb-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2>Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
        <div class="form-group">
          <%= f.label :email, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.input_field :email, class: 'form-control', required: false, autofocus: true, autocomplete: 'email' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :password, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.input_field :password, class: 'form-control', required: false, autocomplete: 'current-password' %>
          </div>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <div class="checkbox">
                <%= f.check_box :remember_me %> <%= f.label :remember_me %>
              </div>
            </div>
          </div>
        <% end %>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.button :submit, "Log in", class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
