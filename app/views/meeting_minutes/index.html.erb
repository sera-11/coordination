<!-- app/views/meeting_minutes/index.html.erb -->

<p style="color: green"><%= notice %></p>
<div class="container">

  <h1 class="text-center"><%= @organization.name %></h1>

  <nav class="bg-body-tertiary">
    <div class="container-fluid">
      <ul class="nav justify-content-center">
        <li class="nav-item">
          <a class="nav-link" href="/organizations/<%=@organization.id%>"> <%= @organization.name %> </a>
        </li>
        <li class="nav-item">
          <%= link_to 'Meeting Minutes', meeting_minutes_organization_path(@organization), class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Members', members_organization_path(@organization), class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Tasks', tasks_organization_path(@organization), class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Events', events_organization_path(@organization), class: 'nav-link' %>
        </li>
      </ul>
    </div>
  </nav>

  <h3 class="text-center mt-4">Meeting Minutes</h3>

  <div id="meeting_minutes">
    <% @meeting_minutes.each do |meeting_minute| %>
      <%#= render meeting_minute %>
      <p>
        <%= link_to meeting_minute.meeting_date.strftime("%Y %B %d"), meeting_minute %>
      </p>
    <% end %>
  </div>

  <%= link_to "New Meeting Minute", new_meeting_minute_path(organization_id: @organization.id) %>


</div>
